@model IEnumerable<Product>

	<table class="table table-light">

		<thead class="table-dark">
			<tr>
				<th>IMAGE</th>
				<th>ID</th>
				<th>SKU</th>
				<th>NAME</th>
				<th>DESRIPTION</th>
				<th>PRICE</th>
				<th>STOCK</th>
				<th>PRODUCTTYPELD</th>
				<th>STATUS</th>
			</tr>
		</thead>
		<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>
					<img src="~/img/product/@item.Image" style="width: 20%;"/>
				</td>
				<td>@item.Id</td>
				<td>@item.SKU</td>
				<td>@item.Name</td>
				<td>@item.Description</td>
				<td>@item.Price</td>
				<td>@item.Stock</td>
				<td>@item.ProductTypeId</td>
				<td>@item.Status</td>
			</tr>
			}
		</tbody>
	</table>